<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.TolkienMaps" parent="android:Theme.Material.Light.NoActionBar" />
    <style name="Theme.TolkienMaps.Button" parent="Theme.TolkienMaps">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:fontFamily">@font/ringbearer</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">17sp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">50dp</item>
    </style>
    <style name="Theme.TolkienMaps.Instruction" parent="Theme.TolkienMaps">
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/black</item>

    </style>
</resources>